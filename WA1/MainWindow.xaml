<Window x:Class="WA1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WA1"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="550">
    <Grid>
                
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="Button0_0" Grid.Row="0" Grid.Column="0" Margin="5" Click="ButtonClick" TabIndex="0"/>
        <Button x:Name="Button0_1" Grid.Row="0" Grid.Column="1" Margin="5" Click="ButtonClick" TabIndex="1"/>
        <Button x:Name="Button0_2" Grid.Row="0" Grid.Column="2" Margin="5" Click="ButtonClick" TabIndex="2"/>
        <Button x:Name="Button1_0" Grid.Row="1" Grid.Column="0" Margin="5" Click="ButtonClick" TabIndex="3"/>
        <Button x:Name="Button1_1" Grid.Row="1" Grid.Column="1" Margin="5" Click="ButtonClick" TabIndex="4"/>
        <Button x:Name="Button1_2" Grid.Row="1" Grid.Column="2" Margin="5" Click="ButtonClick" TabIndex="5"/>
        <Button x:Name="Button2_0" Grid.Row="2" Grid.Column="0" Margin="5" Click="ButtonClick" TabIndex="6"/>
        <Button x:Name="Button2_1" Grid.Row="2" Grid.Column="1" Margin="5" Click="ButtonClick" TabIndex="7"/>
        <Button x:Name="Button2_2" Grid.Row="2" Grid.Column="2" Margin="5" Click="ButtonClick"/>
        <Button x:Name="Button" Content="Обновить доску"  Grid.Row="3" Grid.Column="1" Margin="5" Click="Button_Click" />
    </Grid>
    
</Window>
